<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.ProductItemController"
      spacing="5" alignment="CENTER"
      prefWidth="160" prefHeight="220"
      style="-fx-border-color: #ccc; -fx-border-radius: 10; -fx-padding: 10;">

    <ImageView fx:id="imgProduct" fitWidth="100" fitHeight="100"/>
    <Label fx:id="lblName" text="Tên sản phẩm" wrapText="true" style="-fx-font-weight: bold;"/>
    <Label fx:id="lblPrice" text="₫0"/>
    <Spinner fx:id="spinnerQty" prefWidth="80"/>
    <Button text="Thêm vào giỏ" onAction="#handleAdd"/>
</VBox>